<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:virela="http://schemas.virela.com/winfx/xaml/controls">
    <Style x:Key="DefaultButtonStyle" TargetType="virela:VrlButton">
        <Setter Property="Padding" Value="12,3" />
        <Setter Property="virela:VrlCommonState.MouseOverBackground" Value="{DynamicResource ButtonDefaultBgColorHoverBrush}" />
        <Setter Property="virela:VrlCommonState.MouseOverBorderBrush" Value="{DynamicResource ButtonDefaultBorderColorHoverBrush}" />
        <Setter Property="virela:VrlCommonState.PressedBackground" Value="{DynamicResource ButtonDefaultBgColorActiveBrush}" />
        <Setter Property="virela:VrlCommonState.PressedBorderBrush" Value="{DynamicResource ButtonDefaultBorderColorActiveBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledBackground" Value="{DynamicResource ButtonDefaultBgColorDisabledBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledBorderBrush" Value="{DynamicResource ButtonDefaultBorderColorDisabledBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledOpacity" Value="0.6" />
        <Setter Property="virela:VrlCommonState.FocusedBorderBrush" Value="{DynamicResource BorderColorAccentEmphasisBrush}" />
        <Setter Property="virela:KeyboardNavigationHelper.EnableKeyboardFocusTracking" Value="True" />
        <Setter Property="Background" Value="{DynamicResource ButtonDefaultBgColorRestBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonDefaultBorderColorRestBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonDefaultFgColorRestBrush}" />
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template" Value="{StaticResource ButtonTemplate}" />
    </Style>
    <Style x:Key="PrimaryButtonStyle" TargetType="virela:VrlButton">
        <Setter Property="Padding" Value="12,3" />
        <Setter Property="virela:VrlCommonState.MouseOverBackground" Value="{DynamicResource ButtonPrimaryBgColorHoverBrush}" />
        <Setter Property="virela:VrlCommonState.MouseOverBorderBrush" Value="{DynamicResource ButtonPrimaryBorderColorHoverBrush}" />
        <Setter Property="virela:VrlCommonState.PressedBackground" Value="{DynamicResource ButtonPrimaryBgColorActiveBrush}" />
        <Setter Property="virela:VrlCommonState.PressedBorderBrush" Value="{DynamicResource ButtonPrimaryBorderColorActiveBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledBackground" Value="{DynamicResource ButtonPrimaryBgColorDisabledBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledBorderBrush" Value="{DynamicResource ButtonPrimaryBorderColorDisabledBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledOpacity" Value="0.6" />
        <Setter Property="virela:VrlCommonState.FocusedBorderBrush" Value="{DynamicResource BorderColorAccentEmphasisBrush}" />
        <Setter Property="virela:KeyboardNavigationHelper.EnableKeyboardFocusTracking" Value="True" />
        <Setter Property="Background" Value="{DynamicResource ButtonPrimaryBgColorRestBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimaryBorderColorRestBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonPrimaryFgColorRestBrush}" />
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template" Value="{StaticResource ButtonTemplate}" />
    </Style>
    <Style x:Key="OutlineButtonStyle" TargetType="virela:VrlButton">
        <Setter Property="Padding" Value="12,3" />
        <Setter Property="virela:VrlCommonState.MouseOverBackground" Value="{DynamicResource ButtonInvisibleBgColorHoverBrush}" />
        <Setter Property="virela:VrlCommonState.MouseOverBorderBrush" Value="{DynamicResource ButtonInvisibleBorderColorHoverBrush}" />
        <Setter Property="virela:VrlCommonState.PressedBackground" Value="{DynamicResource ButtonInvisibleBgColorActiveBrush}" />
        <Setter Property="virela:VrlCommonState.PressedBorderBrush" Value="{DynamicResource ButtonInvisibleBorderColorHoverBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledBackground" Value="{DynamicResource ButtonInvisibleBgColorDisabledBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledBorderBrush" Value="{DynamicResource ButtonInvisibleBorderColorDisabledBrush}" />
        <Setter Property="virela:VrlCommonState.DisabledOpacity" Value="0.6" />
        <Setter Property="virela:VrlCommonState.FocusedBorderBrush" Value="{DynamicResource BorderColorAccentEmphasisBrush}" />
        <Setter Property="virela:KeyboardNavigationHelper.EnableKeyboardFocusTracking" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonInvisibleFgColorRestBrush}" />
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template" Value="{StaticResource ButtonTemplate}" />
    </Style>

    <Style TargetType="virela:VrlButton" BasedOn="{StaticResource DefaultButtonStyle}"/>

    <Style x:Key="DefaultHyperlinkStyle" TargetType="virela:VrlHyperlinkButton">
        <Setter Property="Padding" Value="12,3"/>
        <Setter Property="virela:VrlCommonState.MouseOverBackground" Value="{DynamicResource ButtonInvisibleBgColorHoverBrush}"/>
        <Setter Property="virela:VrlCommonState.MouseOverBorderBrush" Value="{DynamicResource ButtonInvisibleBorderColorHoverBrush}"/>
        <Setter Property="virela:VrlCommonState.MouseOverForeground" Value="{DynamicResource ButtonInvisibleFgColorHoverBrush}"/>
        <Setter Property="virela:VrlCommonState.PressedBackground" Value="{DynamicResource ButtonInvisibleBgColorActiveBrush}"/>
        <Setter Property="virela:VrlCommonState.PressedBorderBrush" Value="{DynamicResource ButtonInvisibleBorderColorHoverBrush}"/>
        <Setter Property="virela:VrlCommonState.PressedForeground" Value="{DynamicResource ButtonInvisibleFgColorActiveBrush}"/>
        <Setter Property="virela:VrlCommonState.DisabledBackground" Value="{DynamicResource ButtonInvisibleBgColorDisabledBrush}"/>
        <Setter Property="virela:VrlCommonState.DisabledBorderBrush" Value="{DynamicResource ButtonInvisibleBorderColorDisabledBrush}"/>
        <Setter Property="virela:VrlCommonState.FocusedBorderBrush" Value="{DynamicResource BorderColorAccentEmphasisBrush}"/>
        <Setter Property="virela:KeyboardNavigationHelper.EnableKeyboardFocusTracking" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource FgColorAccentBrush}"/>
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template" Value="{StaticResource HyperlinkTemplate}"/>
    </Style>

    <Style TargetType="virela:VrlHyperlinkButton" BasedOn="{StaticResource DefaultHyperlinkStyle}"/>
    
    
</ResourceDictionary>
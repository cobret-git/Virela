<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mdr="clr-namespace:Wpf.Modern.Themes.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Wpf.Modern.Themes;component/Themes/Github/Palettes/LIghtTritanopiaPalette.xaml"/>
        <ResourceDictionary Source="/Wpf.Modern.Themes;component/Themes/Github/Brushes.xaml"/>
        <ResourceDictionary Source="/Wpf.Modern.Themes;component/Themes/Github/Fonts.xaml"/>
        <ResourceDictionary Source="/Wpf.Modern.Themes;component/Themes/Github/Styles/ButtonStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="mdr:ModernButton" BasedOn="{StaticResource GithubDefaultButtonStyle}"/>
    <Style TargetType="{x:Type mdr:ModernHyperlinkButton}" BasedOn="{StaticResource GithubHyperlinkButtonStyle}"/>
    <Style TargetType="RadioButton" BasedOn="{StaticResource GithubRadioButtonStyle}"/>
    <Style TargetType="CheckBox" BasedOn="{StaticResource GithubCheckBoxStyle}"/>
    <Style TargetType="{x:Type mdr:ModernToggleButton}" BasedOn="{StaticResource GithubToggleButtonStyle}"/>
</ResourceDictionary>
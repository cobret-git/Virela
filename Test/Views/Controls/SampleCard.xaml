<UserControl x:Class="Test.Views.Controls.SampleCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ControlTransparentBgColorActiveBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                      Opacity="0.1" 
                                      ShadowDepth="2" 
                                      BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CodeBlockStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ControlTransparentBgColorActiveBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource FgColorDefaultBrush}"/>

                    <TextBlock Text="{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontSize="12" 
                               Foreground="{StaticResource FgColorDefaultBrush}"
                               Margin="0,2,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Toggle Code Button -->
                <!--<ToggleButton Grid.Column="1" 
                              Content="{ }" 
                              FontFamily="Consolas"
                              FontSize="14"
                              Padding="8,4"
                              x:Name="ShowCodeToggle"
                              ToolTip="Show/Hide XAML Code"
                              Style="{DynamicResource ToggleButtonStyle}"/>-->
            </Grid>

            <!-- Sample Content -->
            <Border Background="Transparent" 
                    BorderThickness="0" 
                    CornerRadius="4"
                    Padding="16">
                <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Border>

            <!-- Code Block -->
            <!--<Border Style="{StaticResource CodeBlockStyle}"
                    Visibility="{Binding IsChecked, ElementName=ShowCodeToggle, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              MaxHeight="200">
                    <TextBlock Text="{Binding XamlCode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontFamily="Consolas"
                               FontSize="11"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Background="Transparent"
                               TextWrapping="NoWrap"/>
                </ScrollViewer>
            </Border>-->

            <!-- Properties Panel (Optional) -->
            <!--<Expander Header="Properties" 
                      Margin="0,8,0,0"
                      Visibility="{Binding HasProperties, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ContentPresenter Content="{Binding PropertiesContent, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  Margin="0,8,0,0"/>
            </Expander>-->
        </StackPanel>
    </Border>
</UserControl>

<UserControl x:Class="Test.Views.Controls.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test.Views.Controls"
             xmlns:converters="clr-namespace:Test.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderColorDefaultBrush}" Padding="24,16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock x:Name="TitleTextBlock"
               Grid.Row="0"
               Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="32"
               FontWeight="SemiBold"
               Foreground="{DynamicResource FgColorDefaultBrush}"
               Margin="0,0,0,5"/>

            <!-- Description -->
            <TextBlock x:Name="DescriptionTextBlock"
               Grid.Row="1"
               Text="{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
               FontSize="14"
               Foreground="{DynamicResource FgColorMutedBrush}"
               TextWrapping="Wrap"
               Visibility="{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringToVisibilityConverter}}"/>
        </Grid>
    </Border>
</UserControl>
